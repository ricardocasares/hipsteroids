doctype html
head
  title Hipsteroids
  link(rel="stylesheet", type="text/css", href="/components/bootstrap/dist/css/bootstrap.min.css")
  link(rel="stylesheet", type="text/css", href="/css/app.css")
body(ng-app="hipster")
  .navbar.navbar-default.navbar-fixed-top(ng-controller="NavCtrl", role="navigation")
      .container
          .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              a.navbar-brand(href="/") Hipsteroids
          .collapse.navbar-collapse
              ul.nav.navbar-nav
                  li(ng-class="{ active: active('/') }")
                    a(href="/") Home
                  li(ng-class="{ active: active('/posts') }")
                    a(href="#/posts") Posts
                  li(ng-class="{ active: active('/about') }")
                    a(href="#/about") About
  div(ng-view)
  
  script(type="text/javascript", src="/components/jquery/jquery.min.js")
  script(type="text/javascript", src="/components/bootstrap/dist/js/bootstrap.min.js")
  script(type="text/javascript", src="/components/firebase/firebase.js")
  script(type="text/javascript", src="/components/angular/angular.js")
  script(type="text/javascript", src="/components/angular-route/angular-route.min.js")
  script(type="text/javascript", src="/components/angularfire/angularfire.min.js")
  script(type="text/javascript", src="/app/app.js")
  script(type="text/javascript", src="/app/config.js")
  script(type="text/javascript", src="/app/factories/firebase.js")
  script(type="text/javascript", src="/app/services/firebaseSync.js")
  script(type="text/javascript", src="/app/controllers/nav.js")
  script(type="text/javascript", src="/app/controllers/posts.js")
  script(type="text/javascript", src="/app/controllers/about.js")